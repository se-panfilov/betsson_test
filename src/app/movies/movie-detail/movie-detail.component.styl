.movie-detail
  font-size 21px
  &__main-info
    width 50%
  &__extra-info
    width 50%
  &__wrapper
    display flex
    align-items center
    align-content center
    justify-content center
    flex-direction column
    text-align center
  &__field
    display block
    &.-primary
      .movie-detail__field-value
        font-size 1.8em
        padding 15px 10px
    &.-inline
      display inline-block
    &.-description
      font-size 1.1em
      padding 15px 30px
    &.-img
      padding 30px
  &__field-key
    font-size 0.8em
    color #545454
  &__field-value
    font-size 1em
  &__list
    padding 0
    margin 0
  &__list-item
    list-style none
    display inline
    padding 5px
    font-size 0.8em
